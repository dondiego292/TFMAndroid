<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txt_survey_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="60dp"
            android:layout_marginTop="3dp"
            android:text="Large Text"
            android:textColor="@color/text_principal"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/txt_survey_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/txt_survey_name"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="60dp"
            android:text="Medium Text"
            android:textColor="@color/text_secondary"
            android:textSize="12dp" />

        <ImageView
            android:id="@+id/img_survey_status"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="7dp"
            android:layout_marginTop="3dp"
            android:src="@drawable/ic_instalada" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_survey_description">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Large Text"
                android:id="@+id/txt_survey_free"
                android:gravity="center_vertical|left"
                android:textColor="@color/colorPrimary"
                android:textSize="12dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="60dp"
                android:layout_marginRight="75dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Medium Text"
                android:id="@+id/txt_survey_type"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="3dp"
                android:gravity="center_vertical|right"
                android:textSize="12dp"
                android:textColor="@color/text_descriptive" />

        </RelativeLayout>


    </RelativeLayout>
</android.support.v7.widget.CardView>